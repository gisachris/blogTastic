  <ul class="users_list">
    <% @users.each do |user| %>
      <li class = 'user_info_component'>
        <a href = "<%= user_path(user) %>" class = "user_info_imna"><%= image_tag user.photo, class: "user_info_image" %>
        </a>
        <div class = "text_info">
          <h1 class = 'user_info_name'><%= user.name %></ h1>
          <h1 class = 'user_info_nop'>Number Of Posts:  <%= user.posts_counter %></h1> 
        </div>
      </li>
    <% end %>
  </ul>
